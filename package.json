{
  "name": "yushuo-membership-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:bk": "turbo run dev --filter=bk",
    "dev:fuplan": "turbo run dev --filter=fuplan",
    "dev:xinli": "turbo run dev --filter=xinli",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:bk": "turbo run build --filter=bk",
    "build:fuplan": "turbo run build --filter=fuplan",
    "build:xinli": "turbo run build --filter=xinli",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "validate-env": "node scripts/validate-env.js",
    "validate-env:web": "node scripts/validate-env.js web",
    "validate-env:bk": "node scripts/validate-env.js bk",
    "validate-env:fuplan": "node scripts/validate-env.js fuplan",
    "validate-env:xinli": "node scripts/validate-env.js xinli",
    "db:indexes": "bash scripts/apply-indexes.sh",
    "db:indexes:win": "scripts\\apply-indexes.bat",
    "db:verify-indexes": "mysql -u root -p member_system < scripts/verify-indexes.sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:all": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.6",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
